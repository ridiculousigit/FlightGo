<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_available_flight"
    tools:context=".view.AvailableFlightFragment">

    <ImageView
        android:id="@+id/arrow_back"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_margin="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/text_Judul"
        android:text="Available Flight"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/arrow_back"
        android:layout_margin="15dp"
        android:layout_width="186dp"
        android:layout_height="36dp"/>

    <TextView
        android:id="@+id/text_penerbangan"
        android:text="Jakarta"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/text_Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/CGK"
        android:text="CGK"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/text_penerbangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="269dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_penerbangan"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="-9dp"
        android:layout_toRightOf="@+id/CGK"
        android:src="@drawable/ic_track" />

    <TextView
        android:text="Haneda"
        android:textColor="@color/black"
        android:layout_marginTop="9dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/text_Judul"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="HND"
        android:layout_marginTop="9dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/black"
        android:layout_below="@id/text_penerbangan"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Availble"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CGK"
        android:layout_marginTop="73dp" />

</RelativeLayout>
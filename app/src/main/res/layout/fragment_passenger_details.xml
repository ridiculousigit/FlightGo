<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp"
    tools:context=".view.PassengerDetailsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_templet"
        android:layout_width="341dp"
        android:layout_height="128dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="15dp" >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imglogopesawat"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/img" />

            <TextView
                android:id="@+id/tanggalPenerbangan"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/imglogopesawat"
                android:text="Min,27 Nov 2022" />

            <TextView
                android:id="@+id/namaPesawat"
                android:text="Garuda Indonesia"
                android:layout_below="@+id/imglogopesawat"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imglogopesawat"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@+id/namaPesawat"
                android:text="UPG -> SUB"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/waktuPenerbangan"
                android:text="16.00 - 17.30"
                android:textSize="10dp"
                android:padding="5dp"
                android:layout_below="@id/namaPesawat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Economy"
                android:layout_below="@+id/waktuPenerbangan"
                android:textSize="10dp"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_passenger"
        android:text="Passenger Details"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:layout_below="@+id/cv_templet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_PassengerDetails01"
        android:text="01 : Passenger Details"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_passenger"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24" />

    <Button
        android:text="02 : PASSENGER DETAILS"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background=""
        android:layout_below="@+id/btn_PassengerDetails01"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Processed Continue"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bulet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
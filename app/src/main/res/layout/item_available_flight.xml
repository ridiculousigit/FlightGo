<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_Jakartatiket"
            android:text="Jakarta"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_CGKtiket"
            android:text="CGK"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_Jakartatiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/bg_garuda"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tv_Jakartatiket"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_CGKtiket"
            android:src="@drawable/ic_garuda" />

        <TextView
            android:id="@+id/tv_DeportTiket"
            android:text="Depart"
            android:layout_marginLeft="9dp"
            android:layout_below="@+id/tv_CGKtiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/jamAvailable"
            android:text="18.00 PM"
            android:layout_marginLeft="9dp"
            android:layout_below="@id/tv_DeportTiket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgpesawat"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_below="@+id/tv_DeportTiket"
            android:layout_marginTop="21dp"
            android:src="@drawable/ic_track" />

        <TextView
            android:id="@+id/tv_TiketHaneda"
            android:text="Haneda"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tiketHND"
            android:text="HND"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_below="@+id/tv_TiketHaneda"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/flightNo"
            android:text="Flight No"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/tiketHND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="JP024"
            android:layout_below="@id/flightNo"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvHarga"
            android:layout_marginTop="5dp"
            android:text="Rp.1.200.000"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/imgpesawat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Economy"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/imgpesawat"
            android:layout_toRightOf="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>
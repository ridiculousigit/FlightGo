<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".view.OrderRoundTripFragment">

    <Button
        android:id="@+id/btnOneWayORT"
        android:text="One Way"
        android:backgroundTint="@color/orange"
        android:background="@drawable/bg_bulet"
        android:layout_width="165dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btnRoundTripORT"
        android:text="Raound Trip"
        android:backgroundTint="@color/orange"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_bulet"
        android:layout_width="165dp"
        android:layout_height="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/abuabu"
        android:layout_below="@+id/btnOneWayORT"
        android:layout_width="500dp"
        android:layout_height="400dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_FromLocationORT"
                android:text="From"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/Ed_FromLocationORT"
                android:layout_below="@id/tv_FromLocationORT"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_TopDestinationORT"
                android:text="Top"
                android:layout_below="@+id/Ed_FromLocationORT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/Ed_DestinationORT"
                android:layout_below="@+id/tv_TopDestinationORT"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_DateORT"
                android:text="Departure Date"
                android:layout_below="@+id/Ed_DestinationORT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_DateORT"
                android:layout_below="@id/tv_DateORT"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_passengerORT"
                android:text="Retrun Date"
                android:layout_below="@+id/ed_DateORT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/ed_passenger"
                android:layout_below="@+id/tv_passengerORT"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/ClassORT"
                android:text="Class"
                android:layout_below="@+id/ed_passenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_Class"
                android:layout_below="@+id/ClassORT"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <Button
                android:id="@+id/btn_SearchORT"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_Class"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/bg_bulet"
                android:text="Search"
                android:textAllCaps="false" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>